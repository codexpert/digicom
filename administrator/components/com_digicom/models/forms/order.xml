<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields addfieldpath="/administrator/components/com_digicom/models/fields">
	
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		
		<field name="userid" type="user" label="COM_DIGICOM_FIELD_SELECT_USER_LABEL" description ="COM_DIGICOM_FIELD_SELECT_USER_DESC" required="true" size="10" default="0" />
		
		<field name="order_date" type="calendar" label="COM_DIGICOM_FIELD_ORDER_DATE_LABEL" description="COM_DIGICOM_FIELD_ORDER_DATE_DESC" size="40" required="true" />
		
		<field name="currency" type="media" label="COM_DIGICOM_FIELD_INTRO_LABEL" description="COM_DIGICOM_FIELD_INTRO_DESC" />
		
		<field id="order_status" name="status" default="Active" type="radio" label="COM_DIGICOM_FIELD_ORDER_STATUS_LABEL" description="COM_DIGICOM_FIELD_ORDER_STATUS_DESC" class="btn-group" size="1" >
			<option value="Active">COM_DIGICOM_ORDER_STATUS_ACTIVE</option>
			<option value="Pending">COM_DIGICOM_ORDER_STATUS_PENDING</option>
		</field>
		<field name="promocodeid" type="text" label="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_DESC" filter="JComponentHelper::filterText" buttons="true" />
		<field name="promocode" type="text" label="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_DESC" filter="JComponentHelper::filterText" buttons="true" />
		<field name="promocodediscount" type="text" label="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_DESC" filter="JComponentHelper::filterText" buttons="true" />
		<field name="amount_paid" type="text" label="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_DESC" filter="JComponentHelper::filterText" buttons="true" />
		<field name="processor" type="text" label="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_DESC" filter="JComponentHelper::filterText" buttons="true" />
					
		<field id="published" name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state" size="1" default="1" >
			<option value="1"> JPUBLISHED</option>
			<option value="0"> JUNPUBLISHED</option>
			<option value="2"> JARCHIVED</option>
			<option value="-2"> JTRASHED</option>
		</field>
		
		<field name="amount" type="text" label="JFIELD_ORDER_AMOUNT_LABEL" description="JFIELD_ORDER_AMOUNT_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />

	
	</fields>
	
</form>