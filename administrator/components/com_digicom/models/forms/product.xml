<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields addfieldpath="/administrator/components/com_digicom/models/fields">
	
		<field name="product_type" type="hidden" filter="unset" default="reguler"/>
		<!--//product_type will be from now product_type-->
		
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		
		<field name="name" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" class="input-xxlarge input-large-text" size="40" required="true" />

		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" class="input-xlarge input-large-text"/>
		
		<field name="price" type="number" label="COM_DIGICOM_FIELD_PRICE_LABEL" description="COM_DIGICOM_FIELD_PRICE_DESC" hint="COM_DIGICOM_FIELD_PRICE_PLACEHOLDER" class="input-large input-large-text" size="40" required="true"/>
		
		<field name="images" type="digimedia" label="COM_DIGICOM_FIELD_INTRO_LABEL" description="COM_DIGICOM_FIELD_INTRO_DESC" />
		
		<field name="description" type="textarea" rows="5" cols="20" label="COM_DIGICOM_FIELD_ARTICLETEXT_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_DESC"/>
		
		<field name="fulldescription" type="editor" label="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_LABEL" description="COM_DIGICOM_FIELD_ARTICLETEXT_FULL_DESC" filter="JComponentHelper::filterText" buttons="true" />
			
		<field id="published" name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state" size="1" default="1" >
			<option value="1"> JPUBLISHED</option>
			<option value="0"> JUNPUBLISHED</option>
			<option value="2"> JARCHIVED</option>
			<option value="-2"> JTRASHED</option>
		</field>
		
		<field name="catid" type="digicategory" label="JCATEGORY" description="JFIELD_CATEGORY_DESC" required="true" />

		<field name="featured" type="radio" class="btn-group btn-group-yesno" label="JFEATURED" description="COM_DIGICOM_FIELD_FEATURED_DESC" default="0" >
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="file" type="hidden" filter="unset" />
		
		<field name="bundle" type="hidden" filter="unset" />
		
		<field name="bundle_source" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
		
		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" size="1" />
		
		<field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="COM_CONTACT_FIELD_CREATED_BY_DESC" />

		<field name="created" type="calendar" label="COM_CONTACT_FIELD_CREATED_LABEL" description="COM_CONTACT_FIELD_CREATED_DESC" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified" type="calendar" class="readonly" label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_CONTACT_FIELD_MODIFIED_DESC" size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" class="readonly" readonly="true" filter="unset"/>

		<field name="checked_out" type="hidden" filter="unset" />

		<field name="checked_out_time" type="hidden" filter="unset" />
		
		<field name="ordering" type="digiordering" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" content_type="com_digicom.product" />

		<field name="publish_up" type="calendar" label="COM_DIGICOM_FIELD_PUBLISH_UP_LABEL" description="COM_DIGICOM_FIELD_PUBLISH_UP_DESC" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />

		<field name="publish_down" type="calendar" label="COM_DIGICOM_FIELD_PUBLISH_DOWN_LABEL" description="COM_DIGICOM_FIELD_PUBLISH_DOWN_DESC" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />
		
		<field name="metatitle" type="text" label="JFIELD_META_TITLE_LABEL" description="JFIELD_META_TITLE_DESC" size="40" />
		
		<field name="metakeywords" type="textarea" label="JFIELD_META_KEYWORDS_LABEL" description="JFIELD_META_KEYWORDS_DESC" rows="3" cols="30" />

		<field name="metadescription" type="textarea" label="JFIELD_META_DESCRIPTION_LABEL" description="JFIELD_META_DESCRIPTION_DESC" rows="3" cols="30" />
		
		<field name="hits" type="text" label="JGLOBAL_HITS" description="COM_DIGICOM_FIELD_HITS_DESC" class="readonly" size="6" readonly="true" filter="unset" />
			
		<field name="used" type="text" label="JFIELD_COM_DIGICOM_USED_LABEL" description="JFIELD_COM_DIGICOM_USED_DESC" class="readonly" size="6" readonly="true" filter="unset"  />
		
		<field name="hide_public" type="radio" class="btn-group btn-group-yesno" label="COM_DIGICOM_FIELD_HIDE_PUBLIC_LABEL" description="COM_DIGICOM_FIELD_HIDE_PUBLIC_DESC" default="0" >
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
			
	</fields>
	
</form>