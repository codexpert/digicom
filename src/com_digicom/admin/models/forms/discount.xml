<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields addfieldpath="/administrator/components/com_digicom/models/fields">
		<fieldset name="basic">  
			<field name="id"  type="hidden" />
			
			<field name="title" required="true" type="text" class="input-xxlarge input-large-text" label="JGLOBAL_TITLE" description="COM_DIGICOM_DICOUNT_TITLE_DESC" />

			<field name="code" required="true" type="text" class="input-xlarge" label="COM_DIGICOM_DISCOUNT_CODE" description="COM_DIGICOM_DISCOUNT_CODE_DESC" />

			<field name="codelimit" type="number" label="COM_DIGICOM_DISCOUNT_CODE_USAGE_LIMIT" description="COM_DIGICOM_DISCOUNT_CODE_USAGE_LIMIT_DESC" min="0" class="input-large"/>

			<field name="amount" required="true" default="1" type="number" min="1"  class="input-large" label="COM_DIGICOM_DISCOUNT_AMOUNT" description="COM_DIGICOM_DISCOUNT_AMOUNT_DESC" />

			<field id="promotype" name="promotype" type="radio" class="btn-group" size="1" default="1" >
				<option value="1"> COM_DIGICOM_DISCOUNT_TYPE_PERCENTAGE</option>
				<option value="0"> COM_DIGICOM_DISCOUNT_TYPE_FIXED</option>
			</field>

			<field name="codestart" type="calendar" class="input-large" 
				label="COM_DIGICOM_DISCOUNT_CODE_START_PUBLISHIING" 
				description="COM_DIGICOM_DISCOUNT_CODE_START_PUBLISHIING_DESC" 
			/>

			<field name="codeend" type="calendar" class="input-large" 
				label="COM_DIGICOM_DISCOUNT_CODE_END_PUBLISHIING" 
				description="COM_DIGICOM_DISCOUNT_CODE_END_PUBLISHIING_DESC" 
			/>

			<field name="validfornew" type="hidden" value="1" 
				label="COM_DIGICOM_DISCOUNT_CODE_APPLY_ON_NEW" 
				default="1"
			/>
			
			<field name="validforrenewal" type="hidden" value="1"
				label="COM_DIGICOM_DISCOUNT_CODE_APPLY_ON_RENEWAL" 
				default="0"
			/>

			<field id="published" name="published" type="radio" 
				label="JSTATUS" 
				description="COM_DIGICOM_DISCOUNT_CODE_STATUS_DESC" 
				class="btn-group" size="1" default="1" 
			>
				<option value="1"> JPUBLISHED</option>
				<option value="0"> JUNPUBLISHED</option>
			</field>

			<field name="forexisting" type="hidden" />
			<field name="aftertax" type="hidden" />
			<field name="ordering" type="hidden" />
			<field name="checked_out" type="hidden" />
			<field name="checked_out" type="hidden" />
			<field name="checked_out_time" type="hidden" />

			<field id="discount_enable_range" name="discount_enable_range" type="radio" class="btn-group" size="1" default="1" >
				<option value="1"> COM_DIGICOM_DISCOUNT_ON_CART</option>
				<option value="0"> COM_DIGICOM_DISCOUNT_ON_SELECTED</option>
			</field>
			<field name="products" type="hidden" />
			<field name="used" type="hidden" />
		</fieldset>
	</fields>

</form>
